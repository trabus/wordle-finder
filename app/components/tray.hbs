<DraggableObjectTarget @action={{fn @api.updateLetter @id}} tabindex="0" class="container bg-neutral-900/[.5]" ...attributes>
    <span class="absolute bottom opacity-10 select-none z-0">{{@name}}</span>
    {{#if @letters}}
        {{#each @letters as |letter|}}
            <Letter @value={{letter}} @trayId={{@id}} @api={{@api}} @toggleDead={{fn @api.toggleDead letter}} />
        {{/each}}
    {{/if}}
    {{yield}}
</DraggableObjectTarget>